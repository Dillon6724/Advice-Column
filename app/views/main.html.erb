<div ng-controller="QuestionsController as questions">
	<h1 class="title">dear internet,</h1>
	<a  class="new-question" ng-click="questionFormEnabled=true">ask a question</a>
	<div ng-show="questionFormEnabled">
		<form ng-submit="questions.askQuestion()">
			<input 	ng-model="questions.newQuestionBody"
							type="text" 
							placeholder="what is your question?"
							class="question-text">
			<input class="submit" type="submit" value="ask" ng-click="questionFormEnabled=!questionFormEnabled">
			<a class="cancel" ng-click="questionFormEnabled=false">cancel</a>
		</form>
	</div>
	<a  class="new-question" ng-click="indexEnabled=!indexEnabled">answer a question</a>
	<div ng-show="indexEnabled">
		<ul ng-repeat="q in questions.data">
			<li><a  class='question' 
							ng-click="answersEnabled=!answersEnabled">
							{{q.body}}
			</a></li>
				<div ng-show="answersEnabled">
					<ul ng-repeat="ans in q.answers">
						<li class="answer">{{ans.body}}</li>
					</ul>
					<div ng-controller="newAnswerController as newAnswers">
						<form ng-submit="newAnswers.addAnswer()">
							<input class="new-answer" ng-model="newAnswers.newAnswerBody" 
												placeholder="answer this question">
							</input>
							<input class="submit ans" type="submit">
						</form>
					</div>
				</div>
			</li>
		</ul>
	</div>
</div>